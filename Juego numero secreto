let numeroUsuario = prompt("Indícame un número entre 1 y 10");
let numeroSecreto = 6;

console.log(`Número introducido por la persona usuaria: ${numeroUsuario}`);
console.log(`Número secreto: ${numeroSecreto}`);

// Comparamos el número introducido por la persona usuaria con el número secreto
if (numeroUsuario == numeroSecreto) {
    console.log("Condición verdadera: El número introducido es igual al número secreto.");
    alert(`Acertaste, el número es: ${numeroUsuario}`);
} else {
    console.log("Condición falsa: El número introducido no es igual al número secreto.");
    alert("Lo siento, no acertaste el número");
    // Comentario para explicar que la condición no se cumplió
}
